public class AnalitzaCaracter {
    public static void main(String[] args) {
        System.out.println("Text?");
        String text = Entrada.readLine();
        System.out.println("Posició?");
        int num = Integer.parseInt(Entrada.readLine());
        char caracter;
        if (num > text.length()) {
            System.out.println("Fora de rang");
        } else if (num < 0) {
            if (num < text.length() *-1) {
                System.out.println("Fora de rang");
            } else {
                caracter = text.charAt(lenght()-num);
            }
        } else {
            character = text.charAt(num);
        }
        analitzaCaracter();
    }

    public static void analitzaCaracter() {
        if (caracter.isLetter()) {
            System.out.println("'" + caracter + "' és una lletra");
        } else if (caracter.isDigit()) {
            System.out.println("'" + caracter + "' és un nombre");
        } else {
            System.out.println("'" + caracter + "' és una altra cosa");
        }
    }
}
